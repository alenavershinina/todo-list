<%- include('header'); -%>

<div class="box" id="heading">
  <h1><%= listName %></h1>
</div>

<div class="box">
  <% for (let i = 0; i < newListItems.length; i++) { %>
  <div class="item">
    <input type="checkbox">
    <p><%= newListItems[i] %></p>
  </div>
  <% } %>
  <div class="item">
    <form action="/" method="post">
      <input type="text" name="newItem" placeholder="New task" autocomplete="off">
      <button type="submit" name="list" value=<%= listName %>>+</button>
    </form>
  </div>
</div>


<%- include('footer'); -%>
